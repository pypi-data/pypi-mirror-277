{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop":true,
    "lib": ["es2019", "dom", "WebWorker"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true, 
    "strictPropertyInitialization": false,
    "target": "es2015",
    "types": ["jest"]
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "node_modules/@types/resize-observer-browser/index.d.ts"
  ],
  "exclude": ["src/**/__tests__"]
}
