<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="view_form_contract_holder_change_wizard" model="ir.ui.view">
      <field name="name">Contract Holder Change Wizard</field>
      <field name="model">contract.holder.change.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="contract_id" invisible="1" />
            <field name="available_products" invisible="1"/>
            <field name="partner_id"
                   domain="[('type', '=', 'representative')]"
                   options="{'no_create_edit':True}"
            />
            <field name="change_date"/>
          </group>
          <group attrs="{'invisible':[('partner_id','==',False)]}">
            <field name="has_mobile_pack_offer_text" widget="Radio"/>
            <field name="product_id"
                   domain="[('id', 'in', available_products)]"/>
            <field name="payment_mode"
                   domain="[('payment_type', '=', 'inbound')]"
            />
            <field name="banking_mandate_required" invisible="1"/>
            <field name="available_banking_mandates" invisible="1"/>
            <field name="banking_mandate_id"
                   domain="[('id', 'in', available_banking_mandates)]"
                   attrs="{
                      'invisible':[('banking_mandate_required','!=',True)],
                      'required':[('banking_mandate_required','=',True)]
                   }"
            />
            <field name="available_email_ids" invisible="1"/>
            <field name="email_ids"
                   widget="many2many_tags_contract_email"
                   options="{'no_create_edit':True}"
                   context="{'email_tags': True}"
                   domain="[('id', 'in', available_email_ids)]"
            />
          </group>
          <group>
            <field name="notes"/>
          </group>
          <footer>
            <button type="object" name="button_change" string="Change" />
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_contract_holder_change_wizard"
                name="Change Contract Holder"
                res_model="contract.holder.change.wizard"
                view_type="form"
                view_mode="form"
                target="new"
    />
    <record id="view_partner_form_holder_wizard_button" model="ir.ui.view">
      <field name="name">res.partner.form.holder.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
				<button name="action_contract_send" position="after">
        <button name="%(action_contract_holder_change_wizard)d"
                string="Change Contract Holder"
                type="action"
                context="{'default_active_id': active_id}"
        />
        </button>
      </field>
    </record>
  </data>
</odoo>
